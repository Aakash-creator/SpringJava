package pattern;

public class Pyramid {

	public static void main(String[] args) {
		
		
int n  = 10;
		
		for(int i=0; i<n ; i++)
		{
			for(int k = 0; k<n/2;k++ )
			{
				System.out.println("#");
			}
			for(int j = 0 ; j<i  ; j++)
			{
				System.out.print("*");
			}
			System.out.println(" ");
		}
		
		

	}

}
